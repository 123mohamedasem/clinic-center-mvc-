<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card">
                <a href="https://localhost:7192/Doctor/getBookappointment">
                    <img src="~/images/@item.Img" class="card-img-top" alt="@item.Name">
                </a>

                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text"><strong>Specialization:</strong> @item.Specialization</p>
                    <a href="https://localhost:7192/Doctor/getBookappointment" data-toggle="modal" data-target="#appointmentModal-@item.Name">
                        <button type="button" class="btn btn-primary">Book appointment</button>
                    </a>

                </div>
            </div>
        </div>

        <!-- Modal for Booking Appointment -->
        <div class="modal fade" id="appointmentModal-@item.Id" tabindex="-1" aria-labelledby="appointmentModalLabel-@item.Id" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="appointmentModalLabel-@item.Id">Book Appointment for @item.Name</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!-- Booking form goes here -->
                        <form>
                            <div class="form-group">
                                <label for="appointmentDate">Date</label>
                                <input type="date" class="form-control" id="appointmentDate" required>
                            </div>
                            <div class="form-group">
                                <label for="appointmentTime">Time</label>
                                <input type="time" class="form-control" id="appointmentTime" required>
                            </div>
                            <div class="form-group">
                                <label for="appointmentReason">Reason</label>
                                <textarea class="form-control" id="appointmentReason" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-success">Confirm Appointment</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .card-img-top {
        width: 100%;
        height: auto;
    }
</style>

